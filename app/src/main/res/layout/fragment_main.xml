<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">


    <TextView
            android:text="@string/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:id="@+id/username_label" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"/>
    <TextView
            android:text="@string/username_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_value" android:layout_alignBaseline="@+id/username_label"
            android:layout_alignBottom="@+id/username_label" android:layout_toEndOf="@+id/username_label"
            android:layout_marginStart="61dp"/>
    <TextView
            android:text="@string/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp" android:id="@+id/email_label" android:layout_below="@+id/username_label"
            android:layout_alignStart="@+id/username_label"/>
    <TextView
            android:text="@string/email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_value" android:layout_alignBaseline="@+id/email_label"
            android:layout_alignBottom="@+id/email_label" android:layout_alignStart="@+id/username_value"/>
</RelativeLayout>